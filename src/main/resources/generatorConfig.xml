        <!-- 配置数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://101.43.56.126:3306/keep-health?characterEncoding=utf-8"
                        userId="keep-health"

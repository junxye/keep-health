        <javaClientGenerator targetPackage="team.keephealth.yjj.mapper" targetProject=".\src\main\java" type="XMLMAPPER"/>

        <!-- 配置需要指定生成的数据库和表，% 代表所有表 -->
        <table tableName="keep-health"/>
